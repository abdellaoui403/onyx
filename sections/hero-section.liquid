<div class="hero">
  {% if section.settings.image != blank %}
    <img 
      src="{{ section.settings.image | img_url: '2000x' }}" 
      alt="{{ section.settings.title }}" 
      class="hero__image"
    >
  {% else %}
    <img 
      src="{{ 'hero-bg.jpg' | asset_url }}" 
      alt="{{ section.settings.title }}" 
      class="hero__image"
    >
  {% endif %}
  
  <div class="hero__overlay"></div>
  
  <div class="hero__content">
    <h1 class="hero__title">
      {{ section.settings.title | default: 'SHOW YOURSELF IN' }}
      <span>{{ section.settings.title_highlight | default: 'FASHIONABLE' }}</span>
      {{ section.settings.title_end | default: 'GYM ATTIRE' }}
    </h1>
    
    {% if section.settings.subtitle != blank %}
      <p class="hero__subtitle">{{ section.settings.subtitle }}</p>
    {% endif %}
    
    <div class="hero__buttons">
      {% if section.settings.button_text != blank and section.settings.button_url != blank %}
        <a href="{{ section.settings.button_url }}" class="btn">{{ section.settings.button_text }}</a>
      {% endif %}
      
      {% if section.settings.button_text_2 != blank and section.settings.button_url_2 != blank %}
        <a href="{{ section.settings.button_url_2 }}" class="btn btn--secondary">{{ section.settings.button_text_2 }}</a>
      {% endif %}
    </div>
  </div>
  
  <div class="hero__stats">
    <div class="hero__stat">
      <div class="hero__stat-number">20</div>
      <div class="hero__stat-label">MODERN EQUIPMENTS</div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "SHOW YOURSELF IN"
    },
    {
      "type": "text",
      "id": "title_highlight",
      "label": "Title highlight",
      "default": "FASHIONABLE"
    },
    {
      "type": "text",
      "id": "title_end",
      "label": "Title end",
      "default": "GYM ATTIRE"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "button_text_2",
      "label": "Second button text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button_url_2",
      "label": "Second button URL",
      "default": "/pages/about"
    }
  ],
  "presets": [
    {
      "name": "Hero Section",
      "category": "Hero"
    }
  ]
}
{% endschema %}