<div class="membership-plans">
  <div class="container">
    <div class="section-title">
      <h2>{{ section.settings.title }}</h2>
    </div>
    
    <div class="row">
      {% for block in section.blocks %}
        <div class="col-md-4">
          <div class="plan-card">
            <h3 class="plan-card__name">{{ block.settings.name }}</h3>
            <div class="plan-card__price">{{ block.settings.price }}</div>
            <div class="plan-card__duration">{{ block.settings.duration }}</div>
            
            <ul class="plan-card__features">
              {% for i in (1..5) %}
                {% assign feature_key = 'feature' | append: i %}
                {% if block.settings[feature_key] != blank %}
                  <li class="plan-card__feature">{{ block.settings[feature_key] }}</li>
                {% endif %}
              {% endfor %}
            </ul>
            
            {% if block.settings.button_text != blank and block.settings.button_url != blank %}
              <a href="{{ block.settings.button_url }}" class="btn">{{ block.settings.button_text }}</a>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Membership Plans",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Membership Plans"
    }
  ],
  "blocks": [
    {
      "type": "plan",
      "name": "Plan",
      "settings": [
        {
          "type": "text",
          "id": "name",
          "label": "Plan Name",
          "default": "Basic"
        },
        {
          "type": "text",
          "id": "price",
          "label": "Price",
          "default": "$29"
        },
        {
          "type": "text",
          "id": "duration",
          "label": "Duration",
          "default": "per month"
        },
        {
          "type": "text",
          "id": "feature1",
          "label": "Feature 1",
          "default": "Access to gym equipment"
        },
        {
          "type": "text",
          "id": "feature2",
          "label": "Feature 2",
          "default": "Locker room access"
        },
        {
          "type": "text",
          "id": "feature3",
          "label": "Feature 3",
          "default": "Free WiFi"
        },
        {
          "type": "text",
          "id": "feature4",
          "label": "Feature 4"
        },
        {
          "type": "text",
          "id": "feature5",
          "label": "Feature 5"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Sign Up"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Membership Plans",
      "category": "Content",
      "blocks": [
        {
          "type": "plan"
        },
        {
          "type": "plan"
        },
        {
          "type": "plan"
        }
      ]
    }
  ]
}
{% endschema %}