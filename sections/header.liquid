<style>
  .announcement-bar {
    background-color: {{ section.settings.announcement_bg_color }};
    padding: 10px 0;
    text-align: center;
  }
</style>

<div class="announcement-bar">
  <div class="page-width">
    <p class="announcement-text">
      {{ section.settings.announcement_text | escape }}
    </p>
  </div>
</div>

<header class="site-header{% if section.settings.sticky_header %} sticky-header{% endif %}">
  <div class="page-width header-wrapper">
    
    <!-- Logo -->
    <div class="header-item header-logo">
      <a href="/" class="header-logo-link">
        {% if section.settings.logo != blank %}
          <img 
            src="{{ section.settings.logo | img_url: 'medium' }}" 
            alt="{{ section.settings.logo.alt | default: shop.name }}"
            width="{{ section.settings.logo_width | default: 100 }}"
            class="header-logo-image"
          >
        {% else %}
          <span class="header-logo-text">
            <span class="logo-part-1">ON</span><span class="logo-part-2">YX</span>
          </span>
        {% endif %}
      </a>
    </div>

    <!-- Navigation -->
    <nav class="header-nav">
      <ul class="header-nav-list">
        {% for link in section.settings.menu.links %}
          <li class="header-nav-item">
            <a href="{{ link.url }}" class="header-nav-link{% if link.active %} active{% endif %}">
              {{ link.title }}
            </a>
          </li>
        {% endfor %}
      </ul>
    </nav>

    <!-- Icons -->
    <div class="header-icons">
      <a href="/search" class="header-icon-link" aria-label="Search">
        {% render 'icon-search' %}
      </a>
      <a href="/account" class="header-icon-link" aria-label="Account">
        {% render 'icon-account' %}
      </a>
      <a href="/pages/wishlist" class="header-icon-link header-icon-wishlist" aria-label="Wishlist">
        {% render 'icon-heart' %}
        <span class="wishlist-count">0</span>
      </a>
      <a href="/cart" class="header-icon-link header-icon-cart" aria-label="Cart">
        {% render 'icon-cart' %}
        <span class="cart-count">{{ cart.item_count }}</span>
      </a>
    </div>

    <!-- Mobile Nav Toggle -->
    <button class="mobile-nav-toggle" aria-expanded="false" aria-label="Toggle menu">
      {% render 'icon-hamburger' %}
    </button>

  </div>

  <!-- Mobile Navigation -->
  <nav class="mobile-nav">
    <ul class="mobile-nav-list">
      {% for link in section.settings.menu.links %}
        <li class="mobile-nav-item">
          <a href="{{ link.url }}" class="mobile-nav-link{% if link.active %} active{% endif %}">
            {{ link.title }}
          </a>
        </li>
      {% endfor %}
    </ul>
  </nav>
</header>
