<div class="cta-section" {% if section.settings.background_image != blank %}style="background-image: url('{{ section.settings.background_image | img_url: 'master' }}');"{% endif %}>
  <div class="container">
    <div class="cta-section__content">
      {% if section.settings.title != blank %}
        <h2 class="cta-section__title">{{ section.settings.title }}</h2>
      {% endif %}
      
      {% if section.settings.text != blank %}
        <p class="cta-section__text">{{ section.settings.text }}</p>
      {% endif %}
      
      {% if section.settings.button_text != blank and section.settings.button_url != blank %}
        <a href="{{ section.settings.button_url }}" class="btn">{{ section.settings.button_text }}</a>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Call to Action",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Ready to Transform Your Body?"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "Join our fitness community today and start your journey to a healthier, stronger you."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Join Now"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button link"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    }
  ],
  "presets": [
    {
      "name": "Call to Action",
      "category": "Content"
    }
  ]
}
{% endschema %}