<section class="section section-brands" style="background-color: {{ section.settings.background_color }};">
  <div class="page-width">
    <div class="section-header text-center">
      <h2 class="section-title">{{ section.settings.title | escape }}</h2>
      <div class="section-subtitle">{{ section.settings.subtitle | escape }}</div>
    </div>
    
    <div class="brands-slider">
      {% for block in section.blocks %}
        <div class="brand-item" {{ block.shopify_attributes }}>
          {% if block.settings.link != blank %}<a href="{{ block.settings.link }}">{% endif %}
            {% if block.settings.image != blank %}
              <img 
                src="{{ block.settings.image | img_url: '200x100', crop: 'center' }}" 
                alt="{{ block.settings.name | escape }}"
                class="brand-image"
                loading="lazy"
              >
            {% else %}
              <div class="brand-placeholder">
                {{ 'logo' | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
            {% endif %}
          {% if block.settings.link != blank %}</a>{% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Brands",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "OUR BRANDS",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "color",
      "id": "background_color",
      "default": "#ffffff",
      "label": "Background color"
    }
  ],
  "blocks": [
    {
      "type": "brand",
      "name": "Brand",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Brand logo"
        },
        {
          "type": "text",
          "id": "name",
          "default": "Brand name",
          "label": "Brand name"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Brands",
      "blocks": [
        {
          "type": "brand"
        },
        {
          "type": "brand"
        },
        {
          "type": "brand"
        },
        {
          "type": "brand"
        },
        {
          "type": "brand"
        }
      ]
    }
  ]
}
{% endschema %}
